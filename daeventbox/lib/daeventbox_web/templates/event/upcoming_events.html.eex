<div  style="width: 98%"> 
    <div class="row">
        <div class="col s12 m12 l10" >
            
            
            <div class="row">
                <%= for event <- @events do %>
                    <div class="col s12 m4 ">
                    <div class="card">
                        <div class="card-image">
                        <!--<img src="https://i.ytimg.com/vi/nTHIMJCRUKI/maxresdefault.jpg">-->
                        <img src="https://jodipodi.resize.fleeksite.com/flow/600x564/<%= event.image_url %>" style="height: 200px">
                        <span class="card-title "></span>
                        </div>
                        <div class="card-content">
                        <p class="truncate" style="font-size: 20px;"> <%= event.title %> </p>
                        <p style="font-size: 14px;"> <%= event.start_date %>  </p>
                        <a href="/event/details/<%=event.id %>" class="btn  waves-effect waves-light darken-2 right" style="font-size: 17px;"> Details </a>
                        
                        </div>
                    
                    </div>
                    </div>
                <%end%>
             </div>
          
        </div>
        <div>
        <div class=" col s12 m2" >
                   
                    <div class="carousel">
                     <h5 class="center"> Featured Events </h5>
                        <%= for ad <- @ads do %>
                            <div class="carousel-item card">  
                                <a href="#three!"><img witdh="200" height="300" src="<%=Enum.at(ad, 1)%>"></a>
                            
                            </div>
                        <%end%>
                        
                    </div>
                    <div>
                    
                        <h5 class="center"> Latest News </h5>
                         <%= for news <- @news do %>
                        <p> <%= news.body %></p>
                        <%end%>
                        </div>
            </div>
        </div>
