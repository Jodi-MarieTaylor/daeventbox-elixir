	<script type="text/javascript">
    	$(document).ready(function(){
             function notify(view = '')
            {
                demo.initChartist();

                $.notify({
                    icon: 'pe-7s-gift',
                    message: "New Notications"

                },{
                    type: 'info',
                    timer: 4000
                });
            }

            function load_unseen_notification(view = '')
          {
            
           $.ajax({
             url:"/admin/notify/send",
             method:"GET",
             data:{view:view},
             dataType:"json",
             success:function(data)
             {
             
              
              if(data.unseen_notification > 0)
              {
                $('#notificationnum').html('<span class="notification hidden-sm hidden-xs">' + data.unseen_notification + '</span>');
                if(data.new_requests > 0){
                    $('#requestnum').html('Requests  <span class="badge badge-light">' + data.new_requests + '</span>');
                }
                if(data.new_messages > 0){
                    $('#messagesnum').html('Messages  <span class="badge badge-light">' + data.new_messages + '</span>');
                }
                if(data.new_complaints > 0){
                    $('#complaintsnum').html('Complaints  <span class="badge badge-light">' + data.new_complaints + '</span>');
                }
                notify();
              }

             }
            });
              
          }
          
          load_unseen_notification();
          setInterval(function(){
              load_unseen_notification();
            }, 100000);

    	});
	</script>

    
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">
    // Load google charts
    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);


    // Draw the chart and set the chart values
    function drawChart() {
    var data = google.visualization.arrayToDataTable([
    ['Visits', 'Visits Per Week'],
    ['4 Weeks Ago', <%= @total_events%>],
    ['3 Weeks Ago', <%= @total_events%>],
    ['2 Weeks Ago', <%= @total_facilitators%>],
    ['1 Week Ago', <%= @total_events%>],
    ['This Week', <%= @total_facilitators%>],
    ]);

    // Optional; add a title and set the width and height of the chart
    var options = {'title':'Da Eventbox Weekly Visits', 'width': 700, 'height':350};

    // Display the chart inside the <div> element with id="barchart"
    var chart = new google.visualization.ColumnChart(document.getElementById('barchart'));
    chart.draw(data, options);
    }
    </script>


