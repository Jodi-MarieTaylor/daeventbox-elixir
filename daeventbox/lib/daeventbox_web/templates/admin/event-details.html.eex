    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
    $(document).ready(function(){
        $(".ticket").click(function(){
            $("#ticket").show();
            $("#registration").hide();
        });
        $(".registration").click(function(){
            $("#registration").show();
            $("#ticket").hide();

        });
    });
    </script>
